
<h1>All of our Coffees</h1>
<div class="row">
<% @javas.each do |java| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= java.image %>">
      <div class="caption">
        <h3><%= java.name %></h3>
        <h3>Cost: $<%= java.price %></h3>
        <%= link_to "More Info", java, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Java', new_java_path, class: "btn btn-primary" %>
